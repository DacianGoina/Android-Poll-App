<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rootlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/userProfileLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Informatii cont:"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/userProfileUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Nume utilizator:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/userProfileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Email:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/userProfileAccountType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Tip cont:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/userProfileId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="ID utilizator:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/actionsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Actiuni disponibile:"
            android:textSize="22sp" />

        <Button
            android:id="@+id/createPoll"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Creare sondaj nou"
            app:backgroundTint="#3BD141" />

        <Button
            android:id="@+id/countEmployeeWork"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Calculare pontaj angajati"
            android:textSize="14dp"
            app:backgroundTint="#FD6600" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#FF0000"
            android:text="Log out"
            android:textColor="@color/white"
            app:backgroundTint="#FF0000" />
    </LinearLayout>

</ScrollView>